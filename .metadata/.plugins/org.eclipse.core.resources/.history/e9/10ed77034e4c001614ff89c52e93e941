#include <iostream>
using namespace std;

int main() {
	cout << "Array of integers" << endl;

	cout <<"==========" << endl;
	int values[3];

	values[0] = 88;
	values[1] = 23;
	values[2] = 29;
	cout << values[0] << endl;
	cout << values[1] << endl;
	cout << values[2] << endl;
	for (int i = 0; i < 3; i++){
		cout << values[i] << endl;
	}
	cout << endl << "Array of doubles" << endl;
	cout << "============" << endl;
	double numbers[4] = {4.5, 2.3, 7.2, 8.1};

	cout << numbers[0] << endl;

	return 0;
}
