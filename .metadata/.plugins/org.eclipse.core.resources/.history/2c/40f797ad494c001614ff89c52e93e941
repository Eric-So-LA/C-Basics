#include <iostream>
using namespace std;

int main() {
	int i = 0;

	while(i < 1) {
		cout << "Hello i:" << i << endl;

		i++;

	}

	cout << "Program quitting." << endl;

	const string password = "hello";

	cout << "Enter your password > " << flush;

	string input;
	cin >> input;

	if(input == password) {
		cout << "password accepted" << endl;
	}
	else {
		cout << "Access denied." << endl;
	}

	while(input != password) {
		cout << "Access denied." << endl;
	}
	return 0;
}
