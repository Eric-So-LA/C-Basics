#include <iostream>
//stands for string stream
#include <sstream>

using namespace std;

int main() {
	//string streams let you concatenate different data
	string name = "Bob";
	int age = 32;
	stringstream ss;

	string info = "Name: " + name + ", age: " + age;

	cout << info << endl;
	return 0;
}
